{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "lib": ["dom", "esnext"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}
